{{shell/window/title-bar app=app showIcon=true}}
{{#shell/app-container app=app}}
  <div class="tg-wrap flex-box flex-one">
    <table id="tg-VYONW" class="tg">
      <thead>
        <tr>
          <th class="tg-baqh">PID</th>
          <th class="tg-baqh">Name</th>
          <th class="tg-baqh">State</th>
          <th class="tg-baqh">Memory</th>
        </tr>
      </thead>
      {{#each manager.apps as |app|}}
        {{#link-to app.name tagName="tr"}}
          <th class="tg-yw4l">{{app.pid}}</th>
          <th class="tg-yw4l">{{app.name}}</th>
          <th class="tg-yw4l">{{app.state}}</th>
          <th class="tg-yw4l">{{app.memory}}</th>
        {{/link-to}}
      {{/each}}
    </table>
  </div>
{{/shell/app-container}}
{{#shell/window/status-bar classNames="actions"}}
  {{input value=execAppName}}<button {{action 'startApp' execAppName}}>Execute!</button>
{{/shell/window/status-bar}}